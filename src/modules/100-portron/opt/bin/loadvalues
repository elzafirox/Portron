#!/bin/sh

#
# load system configuration values to the env
# usage: loadvalues [PREFIX]
#
# Author: Rodolfo Lopez Pintor 2018
#

. /etc/profile.d/portron

get_config(){
    [ -d ${NEO_CFG_ROOT_VAR} ] && {
        cd ${NEO_CFG_ROOT_VAR}
        for a in `ls -1 ${1}* 2>/dev/null`; do
            export ${a}="`cat ${a}`"
            echo "- loading ${a}"
        done
    }
}

ldir=`pwd`
get_config $1
cd ${ldir}
